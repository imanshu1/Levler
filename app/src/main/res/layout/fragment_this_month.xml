<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/inf_this"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <TextView
        android:id="@+id/rank_infl_this"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:text="1"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.imanshu.levler.RoundedImageView
        android:id="@+id/img_infl_this"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/image_user"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_infl_this"
            android:textColor="@color/toolbar"
            android:textSize="18dp"
            android:text="Gilbert Pena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="44 Invites | 22 reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>