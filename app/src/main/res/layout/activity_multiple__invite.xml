<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fade"
    tools:context="com.example.imanshu.levler.Multiple_Invite">

    <android.support.v7.widget.Toolbar
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/multiple_invite_toolbar"
        android:background="@color/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="South tampa Family and Cosmetic Dentistry"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="8dp"
        android:textSize="13dp"
        android:gravity="center_horizontal"
        android:text="3308 S Dale Mabry Hwy,Tampa, FL 33629"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <Button
        android:layout_marginTop="30dp"
        android:layout_marginLeft="@dimen/home_margintop_heading"
        android:layout_marginRight="@dimen/home_margintop_heading"
        android:id="@+id/sendinvites_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/fade"
        android:background="@drawable/mybutton"
        android:text="Send Multiple" />

    <!--<TextView-->
        <!--android:layout_marginRight="40dp"-->
        <!--android:layout_marginLeft="40dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:textAlignment="center"-->
        <!--android:textSize="@dimen/home_textsize"-->
        <!--android:text="@string/multiple_sample"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->

    <TextView
        android:textStyle="bold"
        android:id="@+id/sendmultiple_textview_one"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="@dimen/home_textsize"
        android:textColor="@color/colorPrimary"
        android:text="Send One"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
